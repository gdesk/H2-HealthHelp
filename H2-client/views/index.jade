            div.input
                span.label Password
                input(type="password", name="password", cols="100", rows="1", placeholder= "password")
            div.input
                input(type="text", name="role", value="patient" style="display:none;")
            div.actions
              button.btn.btn-large.btn-primary(type="submit") Sign in
         
     
