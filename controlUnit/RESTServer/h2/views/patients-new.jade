extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Patient Manager
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="", method="post", role="form")

        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Patient Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")

        .form-group
          label.col-xs-10.col-sm-2.control-label(for="id") ID
          .col-xs-12.col-sm-10
            input#name.form-control(name="id")

        button.btn.btn-default.pull-right Save
  .col-xs-12.col-md-4
